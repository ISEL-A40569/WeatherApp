<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_interval_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pdm.isel.yawa.UpdateIntervalSettingActivity">

    <EditText
        android:id="@+id/UptdateTimeText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:shadowColor="@color/colorPrimary"/>

    <Button
        android:layout_below="@+id/UptdateTimeText"
        android:id="@+id/UptdateTimeTextButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Set"
        android:onClick="onUpdateTime"/>


</RelativeLayout>
