<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pdm.isel.yawa.DetailedCurrentWeatherInfoActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:baselineAligned="true">

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:id="@+id/layout_det_top"
            android:layout_height="100sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/alert_light_frame"
                android:id="@+id/detail_image" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:baselineAligned="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/layout_det_top">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="179dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/detail_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView8"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_temp"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/detail_name"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_city"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView16"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_country"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView17"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_date"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_lat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView10"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_lat"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_lon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView12"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_lon"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_desc"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_curr_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_press"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_curr_hum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_hum"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_wind_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_wind"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_sunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_sunrise"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_sunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"

                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_sunset"

                    android:textAlignment="center"
                    style="@style/MainInfo"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
