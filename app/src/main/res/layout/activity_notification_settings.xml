<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pdm.isel.yawa.NotificationSettingsActivity">

    <CheckBox
        android:id="@+id/NotificationsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@id/NotificationsCheckBox"
        android:id="@+id/HourSelectionBox"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:shadowColor="@color/colorPrimary"/>

    <EditText
        android:layout_below="@+id/HourSelectionBox"
        android:id="@+id/MinutesSelectionBox"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:shadowColor="@color/colorPrimary"/>


    <Button
        android:layout_below="@+id/MinutesSelectionBox"
        android:id="@+id/DefineTimeButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="set"/>

</RelativeLayout>
