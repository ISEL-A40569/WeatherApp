<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pdm.isel.yawa.DetailedCurrentWeatherInfoActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:baselineAligned="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="89dp"
            android:id="@+id/layout_det_top"
            android:weightSum="1"
            android:layout_weight="1.48">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:baselineAligned="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/layout_det_top"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.64">

                <TextView
                    android:text="@string/detail_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView8"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_temp"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/detail_name"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_city"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView16"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_country"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView17"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_date"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_desc"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28">

                <TextView
                    android:text="@string/detail_lon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView12"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_lon"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_lat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView10"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/d_lat"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_curr_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_press"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_wind_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_wind"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_curr_hum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_hum"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    app:srcCompat="@android:drawable/alert_light_frame"
                    android:id="@+id/detail_image"
                    android:layout_weight="0.50" />

                <TextView
                    android:text="@string/detail_sunset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_sunset"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

                <TextView
                    android:text="@string/detail_sunrise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    style="@style/Titles"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_sunrise"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    style="@style/MainInfo"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
